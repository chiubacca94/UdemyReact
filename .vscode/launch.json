{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Debug React App in Chrome",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/tic-tac-toe/src",
      "breakpoints": {
        "exception": "uncaught"
      },
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Attach to Chrome",
      "port": 9222,
      "webRoot": "${workspaceFolder}/tic-tac-toe/src",
      "breakpoints": {
        "exception": "uncaught"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Vite Dev Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/tic-tac-toe",
      "console": "integratedTerminal",
      "breakpoints": {
        "exception": "uncaught"
      }
    }
  ]
}
